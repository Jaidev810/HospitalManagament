<!DOCTYPE html>

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Appointment</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet"> 
  </head>
  <body>
            <div class="info">
              <div>
                  <a href="/gmail"><i class="fab fa-google-plus-g" style="text-decoration: none;color: white;"></i></a>
                  <a href="/facebook"><i class="fab fa-facebook" style="color: white;"></i></a>
                  <a href="/twitter"><i class="fab fa-twitter" style="text-decoration: none; color:  white;"></i></a>
                  <a href="/github"><i class="fab fa-github" style="text-decoration: none; color: white;"></i></a>
              </div>
              <text style="position: relative;right: 2%; color: white;">
                  <a href="/home/profile/<%= currentUser.id %>" style="text-decoration: none;color: white;">My Profile</a>
                <% if(currentUser){ %>
                  <a href="/home" style="text-decoration: none;color: white;">Signed in as <%= currentUser.username %></a>
                  <% } %>
                  <a href="/logout" style="text-decoration: none;color: white;">Log Out</a>
                
                </text>
          </div>
          <div class="navbar">
              <div class="logo">
                  <img src="/stylesheets/images/android-chrome-192x192.png">
                  <div style="position: relative;left: 10%;top: 30%;color: red;font-size: 40px;font-weight: 700;">RDBMS</div>
              </div>
              <ul class="items">
                  <li>
                      <a href="/home">Home</a>
                  </li>
                  <li>
                      <a href="/home/add/<%= currentUser.id %>">Appointment</a>
                  </li>
                  <li>
                      <a href="/home/view/<%= currentUser.id %>">Booked</a>
                  </li>
                  <li>
                      <a href="/home/consultant">Consultant</a>
                  </li>
                  <li>
                      <a href="/home/covid">Covid-19</a>
                  </li>
              </ul>
          </div>
          <div class="image">
              <img src="/stylesheets/images/hospital.jpg">
          </div>
          <div class="header">
            Book Your Appointment Now
          </div>
          <div class="appoint">
            <form class="appoint_form" action="/home/add/<%= currentUser.id %>" method="POST">
                <div class="first">
                      <div class="doctor"> 
                        <label style="font-size: 25px;">Doctor's Name:</label>
                        <input  class="app_in" type="text" name="doctor" placeholder="Doctor's Name" required autocomplete="off" list="doctors">
                        <datalist id="doctors">
                          <% doctors.forEach(function(doctor){ %>
                            <option><%= doctor.name %></option>
                            <% }) %>
                        </datalist>
                      </div>
                      <div class="email">
                        <label style="font-size: 25px;">Working Email:</label>
                        <input class="app_in" type="text" name="email" placeholder="Email" required autocomplete="off">
                      </div>
                </div>
                <div class="second">
                    <label style="font-size: 25px;">Date:</label>
                    <input style="height: 50px;font-size: 20px;text-transform: uppercase;border: 1px solid #e4e4e4;box-shadow: 2px 2px 2px rgb(226, 226, 226);" type="date" name="date" placeholder="dd/mm/yyyy" value={{dateExpire}}>
                </div>
                <div class="third">
                    <label style="position: relative;left: 27%;font-size: 25px;">Description:</label>
                    <textarea class="desc" rows="2" name="description"></textarea>
                </div>
                <button class="btn" type="submit">Submit</button>
              </form>
          </div>
          <div class="end">

          </div>
  </body>
</html>



